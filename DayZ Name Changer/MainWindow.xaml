<Window x:Class="DayZ_Name_Changer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DayZ_Name_Changer"
        mc:Ignorable="d"
        Title="MainWindow" Height="135" Width="280">
    <WrapPanel Orientation="Vertical">
        <Label Content="Desired player name:" FontSize="14" FontFamily="Times New Roman"/>
        <TextBox Text="{Binding Path=PlayerName.Setting.Value, BindsDirectlyToSource=True,Mode=TwoWay}" Margin="5,0,5,0" Width="260" Height="25" FontSize="16" FontFamily="Times New Roman"/>
        <Button Content="Save changes" Margin="5" FontSize="16" FontFamily="Times New Roman" Height="30" Click="Button_Click"/>
    </WrapPanel>
</Window>
